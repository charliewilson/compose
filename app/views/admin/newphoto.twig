{% extends 'base.twig' %}
{% set title = 'New Post' %}

{% block main %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-11 col-xl-10">
        <div class="page-header d-flex justify-content-between align-items-center">
          <h1><a href="/nano">nano &#x2615;</a></h1>
          <div>
            <a class="btn btn-light" href="/" target="_blank">View Site</a>
            <a class="btn btn-dark" href="/logout">Logout</a>
          </div>
        </div>
        <hr>
        
        <div class="tab-pane fade show active" id="projects">
          <div class="content-list">
            <div class="row content-list-head">
              <div class="col-auto">
                <h3>New Photo</h3>
              </div>
            </div>
            
            <div class="card">
              <div class="card-body">
                <form method="post">
  
                  <div class="mb-2">
                    <img id="thumbnail_placeholder" src="/dist/img/placeholder.png" style="width:100%; margin-bottom:10px;">
                    <a id="addImageButton" href="#" class="btn btn-dark btn-block">Upload Image</a>
                    <input type="hidden" name="image_encoded" id="image_encoded">
                  </div>
                  
                  <div class="form-group">
                    <div class="input-group">
                      <input type="text" name="timestamp" value="{{ timestamp }}" class="form-control" aria-label="Post Title" data-flatpickr data-date-format="Y-m-d H:i">
                    </div>
                  </div>
                  
                  <div class="form-group">
                  <textarea class="form-control autoresize" name="title"></textarea>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="form-group mb-0">
                      <div class="custom-control custom-checkbox custom-checkbox-switch">
                        <input type="checkbox" name="published" class="custom-control-input" id="is-published">
                        <label class="custom-control-label" for="is-published">Published</label>
                      </div>
                    </div>
                    
                    <div>
                    <a href="/nano" class="btn btn-light">Cancel</a>
                    <input type="submit" class="btn btn-dark" value="Create">
                    </div>
                  </div>
                  
                  <input type="hidden" name="type" value="photo">
                </form>
                
              </div>
            </div>
            
          </div>
          <!--end of content list-->
        </div>
        <!--end of tab-->
      </div>
    </div>
  </div>
  
  <div class="modal" tabindex="-1" role="dialog" id="imageModal">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <input type="file" id="imageUpload">
          <div id="upload-demo"></div>
        </div>
        <div class="modal-footer">
          <a type="button" class="btn btn-default" data-dismiss="modal">Close</a>
          <a type="button" class="btn btn-success btn-saveimage disabled" disabled>Save Image</a>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
{% endblock %}
{% block js %}
<script src="/dist/js/newphoto.js"></script>
{% endblock %}