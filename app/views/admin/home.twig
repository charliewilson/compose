{% extends 'base.twig' %}
{% set title = 'Home' %}

{% block main %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-11 col-xl-10">
        <div class="page-header d-flex justify-content-between align-items-center">
          <h1><a href="/compose">compose &#x1F58A;</a></h1>
          <div>
          <a class="btn btn-light" href="/" target="_blank">View Site</a>
          <a class="btn btn-dark" href="/logout">Logout</a>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-12">
            <div class="row content-list-head">
              <div class="col-auto">
                <h3>Posts</h3>
                <a class="btn btn-round" href="/compose/newpost">
                  <i class="material-icons">add</i>
                </a>
              </div>
            </div>
            <!--end of content list head-->
            <div class="content-list-body row">

              {% for post in posts %}

                <div class="card card-task {% if not post.published %}draft{% endif %}">
                  <div class="card-body">
                    <div class="card-title">
                      <a class="stretched-link" href="/compose/post/{{ post.id }}"><h6 data-filter-by="text" class="H6-filter-by-text">{{ post.title }}</h6></a>
                      <span class="text-small">{{ post.timestamp|date("d/m/y") }}</span>
                    </div>
                    <div class="card-meta">
                      <div class="dropdown card-options">
                        <button class="btn-options" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="material-icons">more_vert</i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                          <a class="dropdown-item text-secondary" href="/compose/post/{{ post.id }}">Edit</a>
                          <a class="dropdown-item text-secondary" href="/post/{{ post.id }}" target="_blank">View on site</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>




